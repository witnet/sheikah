{
  "name": "sheikah",
  "productName": "Sheikah",
  "version": "0.1.0",
  "description": "A Witnet compatible desktop wallet and smart contracts development environment",
  "main": "main.js",
  "scripts": {
    "test": "jest test/app",
    "test-all": "yarn test && yarn test-e2e",
    "test-e2e": "yarn build && NODE_ENV=production jest test/e2e",
    "jest": "jest",
    "typecheck": "tsc --noEmit",
    "hot-server": "cross-env NODE_ENV=development node --max_old_space_size=2096 server.js",
    "build-main": "cross-env NODE_ENV=production node ./node_modules/webpack/bin/webpack --config webpack.config.electron.js --progress --profile --colors",
    "build-renderer": "cross-env NODE_ENV=production node ./node_modules/webpack/bin/webpack --config webpack.config.production.js --progress --profile --colors",
    "build": "yarn build-main && yarn build-renderer",
    "start": "cross-env NODE_ENV=production electron ./app/",
    "start-hot": "cross-env HOT=1 NODE_ENV=development electron ./app/main.electron",
    "postinstall": "yarn build",
    "dev": "yarn hot-server -- --start-hot",
    "package": "yarn build && build --publish never",
    "package-win": "yarn build && build --win --x64",
    "package-linux": "yarn build && build --linux",
    "package-all": "yarn build && build -mwl",
    "lint": "tslint --project tsconfig.json --force",
    "clean": "rimraf release app/dist",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "tslint -p ."
    ]
  },
  "build": {
    "productName": "Sheikah",
    "appId": "io.github.witnet.sheikah",
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "files": [
      "dist/",
      "node_modules/",
      "app.html",
      "main.js",
      "main.js.map",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ]
    }
  },
  "bin": {
    "electron": "./node_modules/.bin/electron"
  },
  "author": "Johann Og <johann@witnet.io>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/witnet/sheikah.git"
  },
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/witnet/sheikah/issues"
  },
  "keywords": [
    "electron",
    "boilerplate",
    "react",
    "react-router",
    "flux",
    "webpack",
    "react-hot"
  ],
  "homepage": "https://witnet.io",
  "devDependencies": {
    "@types/enzyme": "^3.1.1",
    "@types/history": "^4.5.2",
    "@types/jest": "^22.2.3",
    "@types/levelup": "^0.0.30",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "^10.1.2",
    "@types/react": "^16.0.5",
    "@types/react-dom": "16.0.5",
    "@types/react-hot-loader": "^4.1.0",
    "@types/react-redux": "^5.0.4",
    "@types/react-router": "^4.0.24",
    "@types/react-router-dom": "^4.2.6",
    "@types/react-router-redux": "^5.0.13",
    "@types/redux-logger": "^3.0.6",
    "@types/sinon": "^4.3.1",
    "asar": "^0.14.3",
    "babel-jest": "^22.4.4",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-typescript": "^7.0.0-alpha.19",
    "boiler-room-custodian": "^0.6.2",
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.11",
    "css-modules-require-hook": "^4.2.3",
    "devtron": "^1.4.0",
    "electron": "1.8.6",
    "electron-builder": "^19.8.0",
    "electron-builder-http": "^19.27.0",
    "electron-devtools-installer": "^2.2.3",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "express": "^4.16.3",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "hydration": "^1.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.4.3",
    "jest-enzyme": "^6.0.0",
    "json-loader": "^0.5.7",
    "level": "^3.0.1",
    "lint-staged": "^7.0.5",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.9.0",
    "react-hot-loader": "^3.1.3",
    "react-router-redux": "^5.0.0-alpha.9",
    "react-test-renderer": "^16.3.2",
    "redux-logger": "^3.0.6",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.0.1",
    "sinon": "^4.5.0",
    "spectron": "^3.8.0",
    "style-loader": "^0.21.0",
    "ts-jest": "^22.4.6",
    "ts-loader": "^3.5.0",
    "ts-node": "^6.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.8.3",
    "url-loader": "^1.0.1",
    "webpack": "^3.11.0",
    "webpack-dev-middleware": "^2.0.6",
    "webpack-hot-middleware": "^2.22.1",
    "webpack-merge": "^4.1.2"
  },
  "dependencies": {
    "electron-debug": "^1.1.0",
    "font-awesome": "^4.7.0",
    "history": "^4.6.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-redux": "^5.0.7",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "semantic-ui-react": "^0.80.0",
    "source-map-support": "^0.5.5"
  },
  "devEngines": {
    "node": ">=6.x",
    "yarn": ">=1.x"
  }
}
